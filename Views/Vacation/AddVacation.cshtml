@model CreateVacation

@{
    ViewData["Title"] = "AddVacation";
}

<br>
@if(!string.IsNullOrEmpty(ViewBag.Message)){

    <span class="ErrorSpan">
<div class="alert alert-danger" role="alert">
    <a href="#" class="alert-link">
        @ViewBag.Message
    </a>
</div>
        </span>
 }
<form enctype="multipart/form-data" asp-controller="Vacation" asp-action="AddVacation"
      method="post" class="mt-3">
    <input type="hidden" asp-for="PersonId" value="@Model.PersonId" class="submit" />

    <div class="form-group row">
        <label asp-for="VacationFrom" class="col-sm-2 col-form-label "></label>
        <div class="col-sm-10">
            <input asp-for="VacationFrom" class="form-control submit" placeholder="start date">
            <span asp-validation-for="VacationFrom" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="VacationTo" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="VacationTo" class="form-control submit" placeholder="end Date">
            <span asp-validation-for="VacationTo" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Reason" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Reason" class="form-control submit" placeholder="Reason">
            <span asp-validation-for="Reason" class="text-danger"></span>
        </div>
    </div>
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary submit">Create</button>
        </div>
    </div>
    @section Scripts {
        <script>
            $(document).ready(function () {
                $('.submit').on("change", function () {
                    $('.ErrorSpan').hide();
                });
            });
        </script>
    }
</form>

